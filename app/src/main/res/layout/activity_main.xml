<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GPA Calculator"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#3E2723"
        android:layout_marginBottom="32dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="#5D4037"
        app:hintTextColor="#5D4037"
        app:boxBackgroundColor="#FFFFFF">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/gradeInput1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Course 1 Grade"
            android:inputType="numberDecimal"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="#5D4037"
        app:hintTextColor="#5D4037"
        app:boxBackgroundColor="#FFFFFF">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/gradeInput2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Course 2 Grade"
            android:inputType="numberDecimal"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="#5D4037"
        app:hintTextColor="#5D4037"
        app:boxBackgroundColor="#FFFFFF">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/gradeInput3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Course 3 Grade"
            android:inputType="numberDecimal"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="#5D4037"
        app:hintTextColor="#5D4037"
        app:boxBackgroundColor="#FFFFFF">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/gradeInput4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Course 4 Grade"
            android:inputType="numberDecimal"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="#5D4037"
        app:hintTextColor="#5D4037"
        app:boxBackgroundColor="#FFFFFF">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/gradeInput5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Course 5 Grade"
            android:inputType="numberDecimal"/>
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/computeGpaBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compute GPA"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#795548"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/gpaResultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="italic"
        android:gravity="center"
        android:padding="16dp"
        android:background="#BDBDBD"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"/>
</LinearLayout>

